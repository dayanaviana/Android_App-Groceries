<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/register"/>
    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/corned_stroke_black"
        android:paddingLeft="10dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:hint="First Name"
        android:textSize="24dp"
        android:inputType="textPersonName"
        android:id="@+id/edt_reg_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/corned_stroke_black"
        android:paddingLeft="10dp"
        android:hint="Email"
        android:textSize="24dp"
        android:inputType="textEmailAddress"
        android:id="@+id/edt_reg_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/corned_stroke_black"
        android:paddingLeft="10dp"
        android:hint="Mobile"
        android:textSize="24dp"
        android:inputType="phone"
        android:id="@+id/edt_reg_mobile"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/corned_stroke_black"
        android:paddingLeft="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="24dp"
        android:id="@+id/edt_reg_password"/>
    <TextView
    android:id="@+id/txt_register_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:text=""
    android:textSize="16dp"
    android:textAlignment="center"
    android:textColor="#FF0000"/>

    <Button
        android:id="@+id/btn_register"
        android:background="@color/blue_Aegean"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="Register"/>
    <TextView
        android:id="@+id/txt_registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Already registered? Login here"
        />
</LinearLayout>